{
  "name": "next-typescript-apollo-starter",
  "version": "1.0.0",
  "description": "A Next.js starter template with TailwindCSS, Apollo, & TypeScript",
  "repository": "https://github.com/Dylan-Oleary/next-apollo-tailwind-typescript.git",
  "author": "Dylan O'Leary <dylanolearydev@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:next",
    "build:next": "NODE_ENV=production next build",
    "clean": "rm -fr .next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "eslint . && echo '\n\nLint Complete - No Errors\n\n'",
    "prettier": "prettier --config ./prettier.config.js --check \"./src/**/*.*\"",
    "prepare": "husky install",
    "code:clean": "concurrently -n Linter,Prettier -c magenta,green \"yarn lint\" \"yarn prettier\""
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.0",
    "next": "10.2.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-extended": "^0.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.2.4"
  }
}
